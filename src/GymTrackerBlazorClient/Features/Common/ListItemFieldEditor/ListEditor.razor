@using System.Collections.Immutable;

<MudField
    Class="mt-6"
    Label="@Label"
    Variant="Variant.Outlined">
    @foreach (var item in List)
    {
        <MudChip 
            Color="Color.Default"
            OnClose="() => OnRemove.InvokeAsync(item)">
            @item
        </MudChip>
    }
    @if (AddPickList == null)
    {
        <AddListItem OnAddItem="OnAdd"></AddListItem>
    }
    else
    {
        <AddFromList OnAddItem="OnAdd" List="AddPickList.Value" Label="@Label"></AddFromList>
    }
    
</MudField>

@code {
    [Parameter]
    public string Label { get; set; } = default!;

    [Parameter]
    public ImmutableArray<string>? AddPickList { get; set; } = null;

    [Parameter]
    public ImmutableArray<string> List { get; set; } = default!;

    [Parameter]
    public EventCallback<string> OnAdd { get; set; }

    [Parameter]
    public EventCallback<string> OnRemove { get; set; }
}
