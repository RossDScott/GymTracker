@using ApexCharts
@using GymTracker.BlazorClient.Features.History.WorkoutHistory.Store

<div class="d-flex flex-column justify-space-between fullHeight fullWidth">
    <table class="mt-3 mb-auto fullWidth">
        <thead>
            <tr>
                <th>Exercise</th>
                <th>Chart</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var exercise in WorkoutHistory.FilteredExercises)
            {
                <tr>
                    <td>
                        @exercise.ExerciseName
                    </td>
                    <td>
                        <ApexChart TItem="ExerciseRecord"
                                   XAxisType="XAxisType.Datetime"
                                   Options="chartOptions">

                            <ApexPointSeries TItem="ExerciseRecord"
                                             Items="exercise.Records.OrderByDescending(x => x.Date)"
                                             Name="Net Value"
                                             SeriesType="SeriesType.Line"
                                             XValue="@(e => e.Date)"
                                             YValue="@(e => e.TotalVolume)"
                                             OrderByDescending="x=>x.X"/>

                        </ApexChart>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<style>
    table {
        border: 1px solid;
        padding: 3px;
        font-size: 0.83rem;
        border-collapse: collapse;
        width: 100%
    }

    th, td {
        border: 0.6px solid;
        padding: 3px;
    }

    thead {
        font-weight: bold;
    }

    .mud-tabs-panels {
        height: 100%;
    }
</style>

@code {
    [Parameter, EditorRequired]
    public WorkoutHistoryState WorkoutHistory { get; set; }

    ApexChartOptions<ExerciseRecord> chartOptions;

    protected override void OnInitialized()
    {
        chartOptions = new ApexChartOptions<ExerciseRecord>
        {
            Chart = new Chart
            {
                Background = "#32333d",
                Toolbar = new Toolbar
                {
                    Show = false
                },
                ForeColor = "#fff",
                Width = "100%",
                Height= "200px"
            },
            Colors = new List<string> { "#77B6EA" },
        };
    }
}