@using GymTracker.BlazorClient.Features.History.WorkoutHistory.Store
@inherits FluxorComponent
@inject IState<WorkoutHistoryState> State
@inject IDispatcher Dispatcher

<div class="d-flex flex-row">
    <div class="ml-auto" style="width: 30%">
        <MudSelect  Dense="true"
                    DisableUnderLine="true"
                    AnchorOrigin="Origin.BottomCenter"
                    Value="State.Value.SelectedWorkoutPlanId"
                    ValueChanged="(Guid id) => HandleSelectWorkoutPlan(id)">

            @foreach (var item in State.Value.WorkoutPlans)
            {
                <MudSelectItem Value="item.Id">@item.Name</MudSelectItem>
            }
        </MudSelect>
    </div>
    <div class="ml-2">
        <MudDateRangePicker Margin="Margin.Dense" 
                            DisableUnderLine="true"
                            PlaceholderStart="Start Date" PlaceholderEnd="End Date" />
    </div>
</div>

<table class="mt-3">
    <thead>
        <tr>
            <th>Exercise</th>
            <th>Set</th>
            @foreach(var date in State.Value.Dates)
            {
                <th>@date.ToString(@"dd/MM/yy")</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach(var exercise in State.Value.Exercises)
        {
            @foreach (var set in exercise.SetNames.Select((name, index) => (name, index)))
            {
                <tr>
                    @if(set.index == 0)
                    {
                        <td class="boldCell" rowspan="@(exercise.SetNames.Length +1)">@exercise.ExerciseName</td>
                    }
                    
                    <td>@set.name</td>
                    
                    @foreach (var date in State.Value.Dates)
                    {
                        var setRecord = exercise.Records
                                                .FirstOrDefault(x => x.Date == date)?
                                                .Sets.SingleOrDefault(x => x.SetName == set.name);

                        <td>@setRecord?.Measure</td>
                    }
                </tr>
            }
            <tr class="boldCell">
                <td>Total</td>
                @foreach (var date in State.Value.Dates)
                {
                    var dateRecord = exercise.Records.FirstOrDefault(x => x.Date == date);

                    <td>@dateRecord?.TotalVolume</td>
                }
            </tr>
        }
    </tbody>
</table>

<style>
    table, th, td {
        border: 1px solid;
        padding: 4px;
    }
    table{
        border-collapse: collapse;
        width: 100%
    }
    thead{
        font-weight: bold;
    }

    .boldCell{
        font-weight: bold;
    }
</style>


@code {
    protected override void OnInitialized()
    {
        Dispatcher.Dispatch(new InitialiseAction());
        base.OnInitialized();
    }

    void HandleSelectWorkoutPlan(Guid id) => Dispatcher.Dispatch(new SetWorkoutPlanIdAction(id));
}