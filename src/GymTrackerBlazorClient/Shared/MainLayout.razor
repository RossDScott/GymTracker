@inherits LayoutComponentBase

@inject NavigationManager NavigationManager
<MudThemeProvider @ref="@_mudThemeProvider" @bind-IsDarkMode="@_isDarkMode" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout Class="fullHeight">
    <MudAppBar Color="Color.Surface" Fixed="false">
        <MudIconButton 
            Icon="@Icons.Material.Filled.Home" 
            Color="Color.Inherit" 
            Edge="Edge.Start"
            OnClick="HandleNavigateHome"/>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" />
    </MudAppBar>
    <MudMainContent Class="fullHeight mt-n16 pt-16">
        <MudContainer MaxWidth="MaxWidth.Large" Class="ma-0 pa-0 fullHeight">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>


@code {
    private bool _isDarkMode;
    private MudThemeProvider _mudThemeProvider = new();

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            _isDarkMode = await _mudThemeProvider.GetSystemPreference();
            StateHasChanged();
        }
    }

    void HandleNavigateHome() => NavigationManager.NavigateTo("/");
}