@page "/"
@page "/session"
@using GymTrackerBlazorFluxorPOC.Session.Main
@using GymTrackerBlazorFluxorPOC.Session.Main.Components
@using GymTrackerBlazorFluxorPOC.Session.SideBar
@using GymTrackerBlazorFluxorPOC.Session.SideBar.Timers.CountdownTimer.Components

@inject SessionData sessionData
@inject SessionService sessionService

<div class="container-fluid d-flex">
    <SideBar></SideBar>
    <Main></Main>
    @*<CountdownTimer></CountdownTimer>*@
</div>

@code {
    private int _selectedIndex = 1;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            sessionData.CurrentSession = sessionService.SetupFakeSession();
            sessionData.SetSelectedIndex(1);


        }
        catch (Exception ex)
        {

            throw;
        }

        await base.OnInitializedAsync();
    }
}